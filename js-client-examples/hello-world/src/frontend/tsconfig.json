{
    "compilerOptions": {
        "lib": ["es2015", "dom"],
        "outDir": "./dist/",
        "target": "ESNext",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src"]
}
